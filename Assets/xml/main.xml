<vbox width="100%" height="100%">
    <menubar id="menuBar" width="100%">
        <menu text="File">
            <menuitem id="menuNewModel" text="New" />
            <menuitem id="menuLoadModel" text="Load" />
            <menuitem id="menuSaveModel" text="Save" />
            <menuitem id="menuQuit" text="Quit" />
        </menu>
    </menubar>
    <vbox id="topBar" width="100%" style="padding: 5px; border: 1px solid black;">
        <hbox>
            <label text="Loaded animation file: " />
            <label id="loadedAnimation" text="" />
        </hbox>
        <hbox>
            <label text="Loaded TexturePacker file: " />
            <label id="loadedTexturepacker" text="" />
        </hbox>
        <button id="loadTexturepacker" text="Load TexturePacker file" />
    </vbox>
    <hbox width="100%" height="100%" style="spacing: 0px;">
        <vbox id="sideBar" height="100%" style="padding: 5px; border: 1px solid black;">
            <vbox id="animationInfo">
                <hbox>
                    <label text="Current animation: " />
                    <label id="currentAnimation" text="" />
                </hbox>
                <hbox>
                    <label text="Frame Rate: " />
                    <slider id="frameRateSlider" max="60" precision="0" pos="30" /><label text="${Std.string(frameRateSlider.pos)}" />
                </hbox>
                <checkbox id="loopedCheckBox" text="Looped"  />
                <checkbox id="flipXCheckBox" text="Flip X"  />
                <checkbox id="flipYCheckBox" text="Flip Y"  />
            </vbox>
            <vbox>
                <label text="Animations" />
                <vbox style="padding: 5px; border: 1px solid black;">
                    <listview id="animationList" width="200" height="150" selectedIndex="0">
                        <data>

                        </data>
                    </listview>
                    <hbox>
                        <button id="addAnimation" text="Add" />
                        <button id="renameAnimation" text="Rename" />
                        <button id="deleteAnimation" text="Del" />
                    </hbox>
                </vbox>
                <label text="Frames" />
                <vbox style="padding: 5px; border: 1px solid black;">
                    <listview id="frameList" width="200" height="150" selectedIndex="0">
                        <data>
                            
                        </data>
                    </listview>
                    <hbox>
                        <button id="deleteFrame" text="Del" />
                    </hbox>
                </vbox>
            </vbox>
        </vbox>
        <box id="animation_stage" width="100%" height="100%">
            <box id="animation_display" horizontalAlign="center" verticalAlign="center" style="border: 1px solid red;" />
            <hbox id="frame_bar" width="100%" verticalAlign="bottom" continuous="true" />
        </box>
    </hbox>
</vbox>